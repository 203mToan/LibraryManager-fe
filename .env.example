# LibraryHub Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (if using real backend)
DATABASE_URL=postgresql://user:password@localhost:5432/library_db

# OpenAI Configuration (for real AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# AWS S3 Configuration (for book cover uploads)
S3_BUCKET_NAME=library-covers
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-east-1

# Application Configuration
VITE_APP_NAME=LibraryHub
VITE_API_URL=http://localhost:3000/api

# Session Configuration
SESSION_SECRET=your-very-secret-session-key-here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Payment Gateway (for fineAmount payments)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Fine Configuration
FINE_PER_DAY=1.00
MAX_LOAN_DAYS=14
MAX_RENEWALS=2

# Note: This demo application uses mock data and doesn't require any of these variables
# These are provided as a reference for building a production version
